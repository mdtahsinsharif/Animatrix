<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/redleavescropped"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:id="@+id/toplayout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/whip"
            android:src="@drawable/whip"/>
        <!--android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"-->


        <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:layout_gravity="start"
            android:src="@drawable/openwhip"
            android:id="@+id/whipopen"/>
            <!--android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/unwindwriting"
            android:src="@drawable/unwindwriting"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/shakewriting"
            android:src="@drawable/shakewriting"/>

    </LinearLayout>


        <ImageView
            android:layout_width="250sp"
            android:layout_height="750sp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:layout_below="@+id/toplayout"
            android:id="@+id/walkinghorse"
            android:paddingLeft="80sp"
            android:paddingRight="80sp"
            android:src="@anim/walkingfromback"/>


</RelativeLayout>


